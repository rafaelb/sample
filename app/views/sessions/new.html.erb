<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>

        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>

        <div class="btn btn-large btn-primary">
          <%= submit_tag "Sign in" %>
        </div>
    <% end %>

    <p>New User? <%= link_to "Sing up now!", signup_path %></p>
  </div>
</div>